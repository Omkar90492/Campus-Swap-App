<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyListingsActivity">

    <!-- RecyclerView for displaying user listings -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_my_listings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_listings_adapter"/>

    <!-- Button for Listings Adapter -->
    <Button
        android:id="@+id/btn_listings_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Listings Adapter"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/recyclerView_my_listings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
