<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/>  <!-- Light Gray Background -->
            <corners android:radius="8dp"/>  <!-- Rounded Corners -->
            <size android:width="120dp" android:height="120dp"/>  <!-- Default Size -->
        </shape>
    </item>

    <!-- Centered Image -->
    <item android:drawable="@drawable/ic_image_placeholder" android:gravity="center"/>

</layer-list>
